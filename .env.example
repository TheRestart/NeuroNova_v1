# ============================================
# NeuroNova CDSS - Environment Variables (Example)
#
# INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all CHANGE_ME values with actual secrets
# 3. NEVER commit .env to Git
# ============================================

# ============================================
# Project Common Settings
# ============================================
PROJECT_NAME=neuronova
COMPOSE_PROJECT_NAME=neuronova

# ============================================
# Network Settings
# ============================================
NETWORK_NAME=neuronova_network

# ============================================
# Django Backend Service
# ============================================
DJANGO_SERVICE_NAME=django
DJANGO_CONTAINER_NAME=neuronova-django
DJANGO_HOST_PORT=8000
DJANGO_CONTAINER_PORT=8000

# Django Core Settings
DJANGO_SECRET_KEY=CHANGE_ME_django-insecure-generate-new-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*
ENABLE_SECURITY=False

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# JWT Token Settings
JWT_ACCESS_TOKEN_HOURS=1
JWT_REFRESH_TOKEN_DAYS=7

# ============================================
# Main Database (CDSS MySQL)
# ============================================
DB_SERVICE_NAME=cdss-mysql
DB_CONTAINER_NAME=neuronova-cdss-mysql
DB_ENGINE=django.db.backends.mysql
DB_NAME=cdss_db
DB_USER=cdss_user
DB_PASSWORD=CHANGE_ME_cdss_password
DB_ROOT_PASSWORD=CHANGE_ME_cdss_root_password
DB_HOST=cdss-mysql
DB_PORT=3306
DB_HOST_PORT=3306

# ============================================
# OpenEMR Database & Application
# ============================================
OPENEMR_DB_SERVICE_NAME=openemr-mysql
OPENEMR_DB_CONTAINER_NAME=neuronova-openemr-mysql
OPENEMR_DB_NAME=openemr
OPENEMR_DB_USER=openemr
OPENEMR_DB_PASSWORD=CHANGE_ME_openemr_password
OPENEMR_DB_ROOT_PASSWORD=CHANGE_ME_openemr_root_password
OPENEMR_DB_HOST=openemr-mysql
OPENEMR_DB_PORT=3306
OPENEMR_DB_HOST_PORT=3307

OPENEMR_SERVICE_NAME=openemr
OPENEMR_CONTAINER_NAME=neuronova-openemr
OPENEMR_HOST_PORT_HTTP=8081
OPENEMR_HOST_PORT_HTTPS=4443
OPENEMR_CONTAINER_PORT_HTTP=80
OPENEMR_CONTAINER_PORT_HTTPS=443

# OpenEMR Application Settings
OPENEMR_BASE_URL=http://localhost:80
OPENEMR_OE_USER=admin
OPENEMR_OE_PASS=CHANGE_ME_openemr_admin_password
OPENEMR_CLIENT_ID=CHANGE_ME_your_client_id
OPENEMR_CLIENT_SECRET=CHANGE_ME_your_client_secret

# ============================================
# Orthanc PACS
# ============================================
ORTHANC_SERVICE_NAME=orthanc
ORTHANC_CONTAINER_NAME=neuronova-orthanc
ORTHANC_HOST_PORT_HTTP=8042
ORTHANC_HOST_PORT_DICOM=4242
ORTHANC_CONTAINER_PORT_HTTP=8042
ORTHANC_CONTAINER_PORT_DICOM=4242

ORTHANC_API_URL=http://orthanc:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=CHANGE_ME_orthanc_password
ORTHANC_NAME=NeuroNova Orthanc Server
ORTHANC_AUTHENTICATION_ENABLED=false
ORTHANC_HTTP_VERBOSE=true
ORTHANC_HTTP_CORS_ENABLED=true

# ============================================
# OHIF Viewer
# ============================================
OHIF_SERVICE_NAME=ohif-viewer
OHIF_CONTAINER_NAME=neuronova-ohif-viewer
OHIF_HOST_PORT=3000
OHIF_CONTAINER_PORT=80
OHIF_VIEWER_URL=http://localhost:3000

# ============================================
# Redis Cache & Celery Broker
# ============================================
REDIS_SERVICE_NAME=redis
REDIS_CONTAINER_NAME=neuronova-redis
REDIS_HOST=redis
REDIS_HOST_PORT=6379
REDIS_CONTAINER_PORT=6379
REDIS_PORT=6379

# ============================================
# HAPI FHIR Server
# ============================================
FHIR_SERVICE_NAME=hapi-fhir
FHIR_CONTAINER_NAME=neuronova-hapi-fhir
FHIR_HOST_PORT=8080
FHIR_CONTAINER_PORT=8080
FHIR_SERVER_URL=http://hapi-fhir:8080/fhir
FHIR_VERSION=R4
FHIR_ALLOW_MULTIPLE_DELETE=true
FHIR_ALLOW_CASCADING_DELETES=true
FHIR_REUSE_CACHED_SEARCH_RESULTS_MILLIS=-1

# ============================================
# AI Server (Future Integration)
# ============================================
AI_SERVICE_NAME=ai-server
AI_CONTAINER_NAME=neuronova-ai-server
AI_HOST_PORT=5000
AI_CONTAINER_PORT=5000
AI_SERVER_URL=http://localhost:5000
